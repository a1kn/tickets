<div class="my-5">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Status</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= link_to ticket.name, ticket_path(ticket) %></td>
        <td><%= ticket.status %></td>
        <td><%= link_to 'Edit', edit_ticket_path(ticket) %>&nbsp;
            <%= link_to 'Delete', ticket_path(ticket),
                method: :delete,
                data: { confirm: 'Are you sure?' } %> </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

