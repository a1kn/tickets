<div class="my-5">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Tickets</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.name %></td>
        <td><%= link_to @post_counts[tag.id] || 0, "#{tickets_path}?tag=#{tag.id}" %></td>
        <td><%= link_to 'Edit', edit_tag_path(tag) %> |
            <%= link_to 'Delete', tag_path(tag),
                method: :delete,
                data: { confirm: 'Are you sure?' } %> </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>


