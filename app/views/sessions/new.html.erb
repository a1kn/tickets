<%= render 'shared/title', title: 'Login' %>

<p class="lead mb-5">If you don't have an account yet, <%= link_to 'sign up', register_path %>!</p>

<%= form_tag '/login' do %>
  <div class="form-group">
    <%= label_tag :username %>
    <%= text_field_tag :username, nil, {class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password, nil, {class: 'form-control'} %>
  </div>
  <%= submit_tag 'Login', class: 'btn btn-primary' %>
<% end %>

